---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

// Helper to get date from either 'date' or 'pubDate' field
const getPostDate = (data: any) => data.pubDate || data.date || new Date();

const posts = (await getCollection('posts'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => getPostDate(b.data).valueOf() - getPostDate(a.data).valueOf())
  .slice(0, 10);

const featuredPost = posts[0];
const recentPosts = posts.slice(1, 7);
---

<BaseLayout title="SEO Blog - ホーム" description="SEO最適化されたブログサイトです。最新の記事をご覧ください。">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <span class="hero-badge">ビジネス成長のヒント</span>
      <h1>最新のビジネス情報を<br class="hero-br" />わかりやすくお届け</h1>
      <p class="hero-description">
        SEO、マーケティング、ビジネス効率化など、
        あなたのビジネス成長に役立つ情報を発信しています。
      </p>
      <a href="/posts" class="hero-cta">記事を読む</a>
    </div>
  </section>

  <!-- Featured Post -->
  {featuredPost && (
    <section class="featured">
      <div class="section-header">
        <h2>注目の記事</h2>
        <div class="section-line"></div>
      </div>
      <a href={`/posts/${featuredPost.slug}/`} class="featured-card">
        <div class="featured-content">
          <div class="featured-meta">
            <time datetime={getPostDate(featuredPost.data).toISOString()}>
              {getPostDate(featuredPost.data).toLocaleDateString('ja-JP', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })}
            </time>
            {featuredPost.data.category && (
              <span class="featured-category">{featuredPost.data.category}</span>
            )}
          </div>
          <h3>{featuredPost.data.title}</h3>
          {featuredPost.data.description && (
            <p class="featured-description">{featuredPost.data.description}</p>
          )}
          <span class="read-more-link">
            続きを読む
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </span>
        </div>
      </a>
    </section>
  )}

  <!-- Recent Posts -->
  <section class="posts">
    <div class="section-header">
      <h2>最新の記事</h2>
      <div class="section-line"></div>
    </div>

    {posts.length === 0 ? (
      <div class="empty-state">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <polyline points="10 9 9 9 8 9"></polyline>
        </svg>
        <p>まだ記事がありません。</p>
      </div>
    ) : (
      <div class="posts-grid">
        {recentPosts.map((post) => (
          <a href={`/posts/${post.slug}/`} class="post-card">
            <article>
              <div class="post-meta">
                <time datetime={getPostDate(post.data).toISOString()}>
                  {getPostDate(post.data).toLocaleDateString('ja-JP', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                  })}
                </time>
              </div>
              <h3>{post.data.title}</h3>
              {post.data.description && (
                <p class="post-description">{post.data.description}</p>
              )}
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="post-tags">
                  {post.data.tags.slice(0, 3).map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
            </article>
          </a>
        ))}
      </div>
    )}

    {posts.length > 0 && (
      <div class="view-all">
        <a href="/posts" class="view-all-btn">
          すべての記事を見る
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    )}
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
    border-radius: 16px;
    padding: 4rem 3rem;
    margin-bottom: 4rem;
    text-align: center;
  }

  .hero-badge {
    display: inline-block;
    background: var(--primary);
    color: white;
    padding: 0.375rem 1rem;
    border-radius: 50px;
    font-size: 0.8125rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  .hero h1 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.3;
    color: var(--text-primary);
    margin-bottom: 1.25rem;
    letter-spacing: -0.02em;
  }

  .hero-br {
    display: none;
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    max-width: 480px;
    margin: 0 auto 2rem;
    line-height: 1.7;
  }

  .hero-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--primary);
    color: white;
    padding: 0.875rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.2s ease;
  }

  .hero-cta:hover {
    background: var(--primary-dark);
    color: white;
    text-decoration: none;
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  @media (max-width: 640px) {
    .hero {
      padding: 3rem 1.5rem;
    }

    .hero h1 {
      font-size: 1.75rem;
    }

    .hero-br {
      display: block;
    }

    .hero-description {
      font-size: 1rem;
    }
  }

  /* Section Header */
  .section-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .section-header h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    white-space: nowrap;
  }

  .section-line {
    flex: 1;
    height: 2px;
    background: linear-gradient(90deg, var(--border-color) 0%, transparent 100%);
  }

  /* Featured Post */
  .featured {
    margin-bottom: 4rem;
  }

  .featured-card {
    display: block;
    background: white;
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 2.5rem;
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
  }

  .featured-card:hover {
    border-color: var(--primary);
    box-shadow: var(--shadow-xl);
    transform: translateY(-4px);
  }

  .featured-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .featured-meta time {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .featured-category {
    background: var(--primary-light);
    color: var(--primary);
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .featured-card h3 {
    font-size: 1.75rem;
    font-weight: 700;
    line-height: 1.4;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .featured-description {
    font-size: 1.0625rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .read-more-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--primary);
    font-weight: 600;
    font-size: 0.9375rem;
  }

  .read-more-link svg {
    transition: transform 0.2s ease;
  }

  .featured-card:hover .read-more-link svg {
    transform: translateX(4px);
  }

  /* Posts Grid */
  .posts {
    margin-bottom: 4rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .post-card {
    display: block;
    background: white;
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.75rem;
    transition: all 0.2s ease;
    text-decoration: none;
    color: inherit;
  }

  .post-card:hover {
    border-color: var(--primary);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .post-meta {
    margin-bottom: 0.75rem;
  }

  .post-meta time {
    font-size: 0.8125rem;
    color: var(--text-muted);
  }

  .post-card h3 {
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.5;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-description {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: var(--bg-tertiary);
    padding: 0.25rem 0.625rem;
    border-radius: 50px;
    font-size: 0.6875rem;
    color: var(--text-muted);
    font-weight: 500;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--bg-secondary);
    border-radius: 12px;
  }

  .empty-state svg {
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .empty-state p {
    color: var(--text-muted);
    font-size: 1.0625rem;
  }

  /* View All */
  .view-all {
    margin-top: 2.5rem;
    text-align: center;
  }

  .view-all-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--text-primary);
    color: white;
    padding: 0.875rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.9375rem;
    transition: all 0.2s ease;
  }

  .view-all-btn:hover {
    background: var(--primary);
    color: white;
    text-decoration: none;
    transform: translateY(-2px);
  }

  .view-all-btn svg {
    transition: transform 0.2s ease;
  }

  .view-all-btn:hover svg {
    transform: translateX(4px);
  }
</style>
