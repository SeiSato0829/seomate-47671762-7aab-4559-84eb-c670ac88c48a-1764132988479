---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// Helper to get date from either 'date' or 'pubDate' field
const getPostDate = (data: any) => data.pubDate || data.date || new Date();

const posts = (await getCollection('posts'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => getPostDate(b.data).valueOf() - getPostDate(a.data).valueOf());
---

<BaseLayout title="記事一覧 | SEO Blog" description="すべての記事の一覧ページです。">
  <section class="posts-page">
    <!-- Page Header -->
    <div class="page-header">
      <nav class="breadcrumb" aria-label="パンくずリスト">
        <a href="/">ホーム</a>
        <span class="separator">/</span>
        <span class="current">記事一覧</span>
      </nav>
      <h1>記事一覧</h1>
      <p class="posts-count">全 {posts.length} 件の記事</p>
    </div>

    {posts.length === 0 ? (
      <div class="empty-state">
        <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <polyline points="10 9 9 9 8 9"></polyline>
        </svg>
        <h2>まだ記事がありません</h2>
        <p>新しい記事が公開されるまでお待ちください。</p>
      </div>
    ) : (
      <ul class="post-list">
        {posts.map((post, index) => (
          <li class="post-item" style={`animation-delay: ${index * 0.05}s`}>
            <a href={`/posts/${post.slug}/`}>
              <article class="post-card">
                <div class="post-content">
                  <div class="post-meta">
                    <time datetime={getPostDate(post.data).toISOString()}>
                      {getPostDate(post.data).toLocaleDateString('ja-JP', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                      })}
                    </time>
                    {post.data.category && (
                      <span class="category">{post.data.category}</span>
                    )}
                  </div>
                  <h2>{post.data.title}</h2>
                  {post.data.description && (
                    <p class="description">{post.data.description}</p>
                  )}
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="tags">
                      {post.data.tags.slice(0, 4).map((tag) => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                  )}
                </div>
                <span class="read-more">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </span>
              </article>
            </a>
          </li>
        ))}
      </ul>
    )}
  </section>
</BaseLayout>

<style>
  .posts-page {
    max-width: 900px;
    margin: 0 auto;
  }

  /* Page Header */
  .page-header {
    margin-bottom: 3rem;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
  }

  .breadcrumb a {
    color: var(--text-muted);
    transition: color 0.2s ease;
  }

  .breadcrumb a:hover {
    color: var(--primary);
  }

  .breadcrumb .separator {
    color: var(--border-color-dark);
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  .posts-count {
    color: var(--text-muted);
    font-size: 1rem;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 5rem 2rem;
    background: var(--bg-secondary);
    border-radius: 16px;
  }

  .empty-state svg {
    color: var(--text-muted);
    margin-bottom: 1.5rem;
  }

  .empty-state h2 {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .empty-state p {
    color: var(--text-muted);
  }

  /* Post List */
  .post-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .post-item {
    opacity: 0;
    animation: fadeInUp 0.4s ease forwards;
  }

  .post-item a {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .post-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.75rem 2rem;
    background: #fff;
    border: 1px solid var(--border-color);
    border-radius: 12px;
    transition: all 0.25s ease;
  }

  .post-card:hover {
    border-color: var(--primary);
    box-shadow: var(--shadow-lg);
    transform: translateX(8px);
  }

  .post-content {
    flex: 1;
    min-width: 0;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }

  .post-meta time {
    font-size: 0.8125rem;
    color: var(--text-muted);
  }

  .category {
    background: var(--primary-light);
    color: var(--primary);
    padding: 0.25rem 0.625rem;
    border-radius: 50px;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .post-content h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .description {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    margin-bottom: 0.75rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.6;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: var(--bg-tertiary);
    padding: 0.25rem 0.625rem;
    border-radius: 50px;
    font-size: 0.6875rem;
    color: var(--text-muted);
    font-weight: 500;
  }

  .read-more {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: var(--bg-secondary);
    border-radius: 50%;
    color: var(--text-muted);
    flex-shrink: 0;
    margin-left: 1.5rem;
    transition: all 0.25s ease;
  }

  .post-card:hover .read-more {
    background: var(--primary);
    color: white;
    transform: translateX(4px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .post-card {
      padding: 1.25rem 1.5rem;
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .post-card:hover {
      transform: translateY(-4px);
    }

    .read-more {
      margin-left: 0;
      align-self: flex-end;
    }

    .post-content h2 {
      font-size: 1.125rem;
    }
  }
</style>
