---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// Helper to get date from either 'date' or 'pubDate' field
const getPostDate = (data: any) => data.pubDate || data.date || new Date();

const posts = (await getCollection('posts'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => getPostDate(b.data).valueOf() - getPostDate(a.data).valueOf());
---

<BaseLayout title="記事一覧 | SEO Blog" description="すべての記事の一覧ページです。">
  <section class="posts-page">
    <h1>記事一覧</h1>
    <p class="posts-count">全 {posts.length} 件の記事</p>

    {posts.length === 0 ? (
      <p class="no-posts">まだ記事がありません。</p>
    ) : (
      <ul class="post-list">
        {posts.map((post) => (
          <li class="post-item">
            <a href={`/posts/${post.slug}/`}>
              <article class="post-card">
                <div class="post-content">
                  <time datetime={getPostDate(post.data).toISOString()}>
                    {getPostDate(post.data).toLocaleDateString('ja-JP', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                    })}
                  </time>
                  <h2>{post.data.title}</h2>
                  {post.data.description && (
                    <p class="description">{post.data.description}</p>
                  )}
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="tags">
                      {post.data.tags.map((tag) => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                  )}
                </div>
                <span class="read-more">読む &rarr;</span>
              </article>
            </a>
          </li>
        ))}
      </ul>
    )}
  </section>
</BaseLayout>

<style>
  .posts-page h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .posts-count {
    color: rgb(var(--gray));
    margin-bottom: 2rem;
  }

  .no-posts {
    text-align: center;
    color: rgb(var(--gray));
    padding: 3rem;
    background: rgb(var(--gray-light));
    border-radius: 8px;
  }

  .post-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-item a {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .post-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 1.5rem;
    background: #fff;
    border: 1px solid rgb(var(--gray-light));
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .post-card:hover {
    border-color: var(--accent);
    background: #f8fafc;
  }

  .post-content {
    flex: 1;
    min-width: 0;
  }

  .post-content time {
    font-size: 0.8125rem;
    color: rgb(var(--gray));
  }

  .post-content h2 {
    font-size: 1.125rem;
    margin: 0.375rem 0;
    color: rgb(var(--black));
    line-height: 1.4;
  }

  .description {
    font-size: 0.875rem;
    color: rgb(var(--gray));
    margin-bottom: 0.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .tag {
    background: rgb(var(--gray-light));
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.6875rem;
    color: rgb(var(--gray));
  }

  .read-more {
    color: var(--accent);
    font-size: 0.875rem;
    white-space: nowrap;
    margin-left: 1rem;
  }

  @media (max-width: 640px) {
    .post-card {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .read-more {
      margin-left: 0;
    }
  }
</style>
